{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "functions": {
    "src/app/api/vision/generate-script-v2/route.ts": {
      "maxDuration": 600
    },
    "src/app/api/character/upload-reference/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/projects/[id]/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/cron/voice-cleanup/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/voice-cleanup",
      "schedule": "0 3 * * *"
    }
  ]
}

