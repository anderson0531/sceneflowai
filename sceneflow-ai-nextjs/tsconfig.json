{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/services/*": [
        "./src/service-stubs/*",
        "./src/service-stubs/index.d.ts"
      ]
    }
  },
  "include": [
    "*.d.ts",
    "next-env.d.ts",
    "src/service-stubs/**/*.d.ts",
    "src/types/**/*.d.ts",
    "src/types/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/examples/**",
    "src/scripts/**",
    "src/app/test-neon/**",
    "src/services/**",
    "src/app/api/**",
    "src/domain/**",
    "src/hooks/**",
    "src/store/**",
    "src/app/dashboard/**",
    "src/components/workflow/**"
  ]
}
