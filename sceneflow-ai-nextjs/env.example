# Vertex AI (Veo 3.1 via Vertex)
# Set your GCP project, location, and service account credentials for Vertex AI
VERTEX_PROJECT_ID=your_vertex_project_id_here
VERTEX_LOCATION=us-central1
# Path to your Google service account key file (JSON)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json
# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_NAME=sceneflow_ai

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_here

# Encryption Key for BYOK Credentials
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Vercel Environment (for production)
VERCEL_ENV=production

# Optional: Database URL (alternative to individual DB_* variables)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# Google Gemini API Studio
# Used for: LLM (Gemini), TTS (Google TTS), Image Generation (Gemini 3 Pro Image), Music Generation (Lyria)
# Get a key at https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# [DEPRECATED] Google Cloud Platform (GCP) with Vertex AI
# No longer required - migrated to Gemini API Studio
# GCP_PROJECT_ID=your_gcp_project_id
# GCP_REGION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS_JSON=

# [DEPRECATED] Google Cloud Storage (GCS)
# No longer required - migrated to Vercel Blob storage
# GCS_BUCKET_NAME=your-bucket-name

# ElevenLabs (Sound Effects Only)
# Used only for SFX generation. TTS uses Google.
# Get a key at https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional: LLM for Cue
# Get a key at https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# Shotstack (Video Editing & Rendering)
# Get a key at https://shotstack.io
SHOTSTACK_API_KEY=your_shotstack_api_key_here
SHOTSTACK_API_URL=https://api.shotstack.io/stage

# Paddle (Payment Processing - Merchant of Record)
# Get keys at https://vendors.paddle.com/authentication
PADDLE_API_KEY=your_paddle_api_key_here
PADDLE_SELLER_ID=your_seller_id_here
PADDLE_WEBHOOK_SECRET=your_webhook_secret_here
PADDLE_CLIENT_TOKEN=your_client_side_token_here
# Product Price IDs (get from Paddle dashboard)
PADDLE_TRIAL_PRICE_ID=your_price_id_here
PADDLE_STARTER_PRICE_ID=your_price_id_here
PADDLE_PRO_PRICE_ID=your_price_id_here
PADDLE_STUDIO_PRICE_ID=your_price_id_here
PADDLE_ENTERPRISE_PRICE_ID=your_price_id_here
# Optional: Use sandbox for testing
PADDLE_ENVIRONMENT=production

# Observability
METRICS_AUTH_TOKEN=
LOG_LEVEL=info

# Test Mode Features
# Enable test plan switching in production (for QA/testing before Paddle integration)
ENABLE_TEST_PLAN_SWITCH=false

# Vercel Blob Storage (for image uploads)
# Automatically configured on Vercel. For local dev:
# BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here
