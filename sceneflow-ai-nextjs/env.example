# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_NAME=sceneflow_ai

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_here

# Encryption Key for BYOK Credentials
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Vercel Environment (for production)
VERCEL_ENV=production

# Optional: Database URL (alternative to individual DB_* variables)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# Google Cloud APIs
# Used for: TTS (Text-to-Speech), Music Generation (Lyria), and Image Generation (Imagen)
# Get a key at https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your_google_api_key_here
# Or use service account credentials:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Google Gemini API (for Music Generation with Lyria - Currently Experimental)
# Can use the same key as GOOGLE_API_KEY
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Storage (for Character Reference Images)
# Character reference images are uploaded to GCS for use with Imagen 3 API
# Create a bucket at https://console.cloud.google.com/storage
# Bucket name example: sceneflow-character-refs
GCS_BUCKET_NAME=your-bucket-name

# ElevenLabs (Sound Effects Only)
# Used only for SFX generation. TTS uses Google.
# Get a key at https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional: LLM for Cue
# Get a key at https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here
